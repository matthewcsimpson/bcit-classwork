<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>GreetingServlet</servlet-name>
  	<display-name>GreetingServlet</display-name>
  	<description>Assignment</description>
  	<servlet-class>ca.bcit.comp3656.assign.GreetingServlet</servlet-class>
  </servlet> 
  <servlet-mapping>
  	<servlet-name>GreetingServlet</servlet-name>
  	<url-pattern></url-pattern>
  </servlet-mapping>
  
  <context-param>
      <param-name>headerText</param-name>
      <param-value>Welcome to the Employee Database</param-value>
    </context-param>
    <context-param>
      <param-name>employeeListHeader</param-name>
      <param-value>List Employees:</param-value>
    </context-param>
  
</web-app>
