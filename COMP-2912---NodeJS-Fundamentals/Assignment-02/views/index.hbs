<div class="container">
  <h1>{{title}}</h1>

  <ul class="nav nav-tabs">
    <li class="nav-item active"><a class="nav-link" href="/">Start your order</a></li>
    <li class="nav-item"><a class="nav-link" href="/orders">Order listings</a></li>
  </ul>

  <br />
  <div class="row">
    <form method="POST" id="submitForm">
      <div class="form-group">
        <label for="customerName">Customer Name</label>
        <input
          type="text"
          required
          class="form-control"
          name="customerName"
          id="customerName"
          placeholder="Enter your name"
        />
      </div>

      <div class="form-group">
        <label for="phoneNumber">Phone number</label>
        <input
          type="text"
          required
          class="form-control"
          name="phoneNumber"
          id="phoneNumber"
          placeholder="Enter your phone number"
        />
      </div>

      <div class="form-group">
        <label for="address">Address</label>
        <input
          type="text"
          required
          class="form-control"
          name="address"
          id="address"
          placeholder="Enter your address"
        />
      </div>

      <div class="form-group">
        <label for="pizzaSize">Pizza size</label>
        {{#pizzaOptions.sizes}}
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="pizzaSize"
              id={{this.size}}
              value={{this.price}}
            />
            <label class="form-check-label" for="pizzaSize">
              {{this.size}}
              ${{this.price}}
            </label>
          </div>
        {{/pizzaOptions.sizes}}
      </div>

      <div class="form-group">
        <label for="typeOfCrust">Type of crust</label>
        {{#pizzaOptions.crust}}
          <div class="form-check2">
            <input
              class="form-check-input2"
              type="radio"
              name="typeOfCrust"
              id={{this.type}}
              value={{this.type}}
            />
            <label class="form-check-label2" for="typeOfCrust">
              {{this.type}}
            </label>
          </div>
        {{/pizzaOptions.crust}}
      </div>

      <div class="form-group" id="meatToppings">
        <p><label>Select your toppings</label></p>
        {{#pizzaOptions.meatToppings}}
          <input
            type="checkbox"
            value="{{this.name}}"
            name="meatToppings"
            id="{{this.name}}"
          />
          <label>{{this.name}}</label>
        {{/pizzaOptions.meatToppings}}
      </div>

      <div class="form-group" id="veggieToppings">
        <p><label>Select your toppings</label></p>
        {{#pizzaOptions.veggieToppings}}
          <input
            type="checkbox"
            value={{this.name}}
            name="veggieToppings"
            id={{this.name}}
          />
          <label>{{this.name}}</label>
        {{/pizzaOptions.veggieToppings}}
      </div>

      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input
          type="number"
          class="form-control"
          required
          id="quantity"
          name="quantity"
          placeholder="Quantity"
        />
      </div>

      <button type="submit" class="btn btn-success">Submit</button>
      <div class="form-group margin-bottom-10">
      </div>
      <div id="statusMsg">
      </div>
    </form>
  </div>
</div>
<script src="javascripts/index.js"></script>